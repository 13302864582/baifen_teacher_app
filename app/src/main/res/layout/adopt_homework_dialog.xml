<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/adopt_dialog_width"
    android:layout_height="@dimen/adopt_dialog_height"
    android:layout_gravity="center"
    android:background="@drawable/adopt_homework_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/please_evaluate_tec_lessons"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/degree_ratingBar_adopt_dialog"
        style="@style/adoptHomeWorkRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/adoptHomeWorkRatingBarStartHei"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/comment_et_adopt_dialog"
        android:layout_width="@dimen/adopt_edit_width"
        android:layout_height="@dimen/adopt_edit_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/adopt_edit_bg"
        android:hint="@string/please_add_comment"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/TextColorBlack"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submit_adopt_btn"
        android:layout_width="@dimen/adopt_submit_width"
        android:layout_height="@dimen/adopt_submit_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:background="@drawable/adopt_submit_btn_selector"
        android:text="@string/text_commit"
        android:textColor="#1f9c9c"
        android:textSize="20sp" />

</LinearLayout>