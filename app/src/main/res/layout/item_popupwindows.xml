<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/blank_item_popupwindows"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@drawable/bg_transparent" />

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/pop_list_bg"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="25dp" >

        <Button
            android:id="@+id/item_popupwindows_camera"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_pop_btn_selector"
            android:text="@string/text_camera_popupwindow_photo"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/item_popupwindows_photo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_pop_btn_selector"
            android:text="@string/text_camera_popupwindow_alnum"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_pop_window_cancel_btn_selector"
            android:text="@string/text_camera_popupwindow_cancel"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>