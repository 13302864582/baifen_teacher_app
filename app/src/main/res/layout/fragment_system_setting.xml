<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/welearn_header_view" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dip"
            android:layout_marginRight="23dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginTop="15dip"
                    android:text="@string/message_settings"
                    android:textColor="#242424"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#e6e6e6" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:gravity="center_vertical"
                        android:text="@string/voice"
                        android:textColor="#686868"
                        android:textSize="15sp" />

                    <com.ucuxin.ucuxin.tec.view.SegmentedControl
                        android:id="@+id/allowMsgNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dip"
                        android:textColor="#6B6B6B"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="8dip"
                    android:background="#f2f2f2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:gravity="center_vertical"
                        android:text="@string/vibration"
                        android:textColor="#686868"
                        android:textSize="15sp" />

                    <com.ucuxin.ucuxin.tec.view.SegmentedControl
                        android:id="@+id/allowMsgVibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dip"
                        android:textColor="#6B6B6B"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <RelativeLayout
                android:id="@+id/not_distur_btn"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip"
                    android:text="@string/dnd_settings"
                    android:textColor="#242424"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/about_btn"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip"
                    android:text="@string/about_us"
                    android:textColor="#242424"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/check_update"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_updata"
                        android:textColor="#242424"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/tips_update_iv_setting"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_unread_redpoint"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dip"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <RelativeLayout
                android:id="@+id/user_respone_btn"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip"
                    android:text="@string/user_feedback"
                    android:textColor="#242424"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>
            <!-- 检查更新start -->
             <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <RelativeLayout
                android:id="@+id/menu_check_update"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip"
                    android:text="@string/check_updata"
                    android:textColor="#242424"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>
            <!-- 检查更新end -->
            <!-- 关于老师版start -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <RelativeLayout
                android:id="@+id/menu_about_us"
                android:layout_width="wrap_content"
                android:layout_height="57dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dip"
                    android:text="@string/about_us"
                    android:textColor="#242424"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>
            <!-- 关于老师版end -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e6e6e6" />

            <RelativeLayout
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="67dip"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dip"
                    android:background="#ff0000" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/text_logout"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>