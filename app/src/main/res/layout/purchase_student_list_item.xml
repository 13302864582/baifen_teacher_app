<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/body_container_purchase_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/avatar_iv_purchase_item"
            android:layout_width="@dimen/purchase_student_list_avatar_size"
            android:layout_height="@dimen/purchase_student_list_avatar_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:adjustViewBounds="false"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/default_contact_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_weight="11"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_tv_purchase_item"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/name"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/sex_tv_purchase_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ç”·"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sale_time_tv_purchase_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:text="2015.6.1"
                    android:textColor="#808080"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ask_container_purchase_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/teacher_remind_icon_img" />

            <TextView
                android:id="@+id/ask_time_tv_purchase_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="2015.6.3"
                android:textColor="#808080"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/click_icon" />
        </LinearLayout>

        <ImageView
            android:id="@+id/catalog_icon_purchase_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/class_catalog_img"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/catalog_container_purchase_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:visibility="gone" >

        <ListView
            android:id="@+id/catalog_lv_purchase_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="#f5f5f5" >
        </ListView>
    </LinearLayout>

</LinearLayout>