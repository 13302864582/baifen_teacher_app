<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/header_layout"
        layout="@layout/welearn_header_view"  android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/knowledge_et_input"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f5f5f5"
        android:maxLength="20"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:textColor="#6f6f6f"
        android:textCursorDrawable="@drawable/knowledge_input_img"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" >

        <com.ucuxin.ucuxin.tec.function.teccourse.view.KnowledgeGroupView
            android:id="@+id/knowledge_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <ListView
        android:id="@+id/knowledge_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>