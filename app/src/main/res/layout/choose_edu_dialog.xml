<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_adopt_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20000000" >

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/adopt_homework_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/select_edu_title"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/edu_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <RadioButton
                android:id="@+id/edu_0_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:tag="0"
                android:text="@string/edulevel1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/welearn_gray" />

            <RadioButton
                android:id="@+id/edu_1_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:tag="1"
                android:text="@string/edulevel2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/welearn_gray" />

            <RadioButton
                android:id="@+id/edu_2_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:tag="2"
                android:text="@string/edulevel3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/welearn_gray" />

            <RadioButton
                android:id="@+id/edu_3_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:tag="3"
                android:text="@string/edulevel4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/welearn_gray" />
        </RadioGroup>

        
    </LinearLayout>

</FrameLayout>