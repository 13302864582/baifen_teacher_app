<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical" >

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content" layout="@layout/welearn_header_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp" >

        <EditText
            android:id="@+id/choice_knowledge_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_search_school_selector"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="5dp"
            android:hint="@string/choice_knowledge_edittext_hint_text"
            android:minHeight="30dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#414040"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/choice_knowledge_delete_bt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/choice_knowledge_edittext"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/bt_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/search_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="14dp"
        android:text="@string/text_search_result"
        android:textColor="#414040"
        android:textSize="10sp"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/choice_knowledge_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:visibility="invisible" >
    </ListView>

</LinearLayout>