<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/welearn_header_view" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login"
            android:layout_width="match_parent"
            android:layout_height="280dp">

        </ImageView>

        <RelativeLayout
            android:layout_marginTop="-175dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@mipmap/rectangle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--   <ImageView
                   android:visibility="invisible"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="100dp"
                   android:src="@drawable/ic_logo_phone_login"
                   android:id="@+id/imageView" />-->

            <LinearLayout
                android:paddingTop="15dp"
                android:id="@+id/content_user_pwd"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/phone_num_et_phonelogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableLeft="@mipmap/icon_phone"
                        android:drawablePadding="15dp"
                        android:hint="@string/text_phone_num_or_welearn_num"
                        android:inputType="number"
                        android:maxLength="14"
                        android:minHeight="40dp"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/delete_phone_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignRight="@+id/phone_num_et_phonelogin"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/common_dele"
                        android:visibility="gone" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignLeft="@id/phone_num_et_phonelogin"
                        android:layout_alignRight="@id/phone_num_et_phonelogin"
                        android:layout_below="@id/phone_num_et_phonelogin"
                        android:background="#454545" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="8dp" >

                    <EditText
                        android:id="@+id/phone_psw_et_phonelogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawableLeft="@mipmap/icon_suo"
                        android:drawablePadding="15dp"
                        android:hint="@string/text_password"
                        android:inputType="textPassword"
                        android:maxLength="15"
                        android:minHeight="40dp"
                        android:padding="6dp"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/delete_psw_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignRight="@+id/phone_psw_et_phonelogin"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/common_dele"
                        android:visibility="gone" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignLeft="@id/phone_psw_et_phonelogin"
                        android:layout_alignRight="@id/phone_psw_et_phonelogin"
                        android:layout_below="@id/phone_psw_et_phonelogin"
                        android:background="#454545" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forget_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!--   <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1111"
                           android:textColor="#9e9e9e"
                           android:textSize="14sp" />-->

                    <TextView
                        android:id="@+id/los_psw_tv_phonelogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/los_psw"
                        android:textColor="#FF781E"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/non_num_tv_phonelogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:text="没有账号？先用手机注册"
                    android:textColor="#9e9e9e"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/non_num_tv_phonelogin"
                    android:src="@drawable/ic_choic_jiantou" />
            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/phone_login_btn_phonelogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:background="@mipmap/btn_login_bg"
            android:text="@string/text_login"
            android:textColor="#ffffff"
            android:textSize="14sp" />


        <!--debug按钮start-->
        <Button
            android:id="@+id/ip_change_debug_bt"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_orange_dark"
            android:text="改IP"
            android:textColor="#000000"
            android:visibility="gone" />
        <!--debug按钮end-->

        <RelativeLayout
            android:id="@+id/bottom_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/phone_login_btn_phonelogin"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/login_info_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/login_guide_info1"
                    android:textColor="@color/web_regsist_text"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_wangzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="网址：%s"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/login_info_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal|bottom"
                    android:singleLine="true"
                    android:text="@string/login_guide_info2"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_service_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="全国服务电话:400-0880-210"
                    android:textSize="10sp"
                    android:visibility="visible" />


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >


    </ScrollView>-->

</LinearLayout>