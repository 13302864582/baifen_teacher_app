<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:background="@color/white"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    
        android:orientation="vertical" >

        <include
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
            layout="@layout/welearn_header_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/grade_choice_btn_addcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/choice_grade_btn_selector"
                android:gravity="center" >

                <TextView
                    android:id="@+id/grade_choice_tv_addcourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="11"
                    android:text="选择年级"
                    android:textColor="#808080"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/grade_choice_iv_addcourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/click_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subject_choice_btn_addcourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/choice_grade_btn_selector"
                android:gravity="center" >

                <TextView
                    android:id="@+id/subject_choice_tv_addcourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="11"
                    android:text="选择科目"
                    android:textColor="#36c9c9"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/subject_choice_iv_addcourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/click_icon" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/name_of_course_et_addcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/course_name_input_bg"
            android:hint="请输入课程名称"
            android:maxLength="20"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/introd_of_course_et_addcourse"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/course_introduction_bg"
            android:gravity="left|top"
            android:hint="请输入课程介绍"
            android:padding="6dp"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="21dp"
            android:text="课程价格："
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/minus_price_ibtn_addcourse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bg_minus_price_btn_selector"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/price_tv_addcourse"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:text="100"
                android:textColor="#ef5234"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/plus_price_ibtn_addcourse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bg_add_price_btn_selector"
                android:clickable="true"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学点"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="21dp"
            android:text="包含课量："
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="9dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/minus_num_ibtn_addcourse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bg_minus_price_btn_selector"
                android:clickable="true"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/num_tv_addcourse"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:text="10"
                android:textColor="#ef5234"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/plus_num_ibtn_addcourse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:contentDescription="@null"
                android:src="@drawable/bg_add_price_btn_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次课"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>