<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ucuxin.ucuxin.tec.view.ScaleImageView
            android:id="@+id/pic_scale"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
            android:scaleType="matrix" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_answer_detail_rotate_container"
        android:layout_width="match_parent"
        android:layout_height="44.1dip"
        android:background="@drawable/bg_nav">

        <Button
            android:id="@+id/pay_answer_detail_turn_left_btn"
            android:layout_width="32dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.6dip"
            android:background="@drawable/ic_carmera_turn_left_selector" />

        <Button
            android:id="@+id/pay_answer_detail_turn_right_btn"
            android:layout_width="32dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.6dip"
            android:background="@drawable/ic_carmera_turn_right_selector" />
    </RelativeLayout>

</LinearLayout>