<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="8dp"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/iv_teacher_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/teacher_img" />
        <requestFocus />

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_teacher_avatar"
            android:text=""
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_teacher_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_teacher_avatar"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号 :"
                android:textColor="#828282"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_xuehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#828282"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:background="@drawable/xin" />

            <TextView
                android:id="@+id/tv_xinyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#828282"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/setting_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/togo_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- 责任心指数start -->

    <RelativeLayout
        android:id="@+id/layout_zerenxin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_zerenxin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="责任心指数:"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout_zerenxin_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_zerenxin_title"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_getguize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="获取奖励规则"
            android:textColor="#ff7200"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/tv_getguize"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/zerenxin_into_selector" />
    </RelativeLayout>

    <!-- 责任心指数end -->

    <RelativeLayout
        android:id="@+id/layout_gotixian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/layout_xuedian"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_zong_xuedian_cion"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/total_xuedian_cion" />

            <TextView
                android:id="@+id/tv_total_xuedian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/iv_zong_xuedian_cion"
                android:gravity="center_vertical"
                android:text="总学点 :"
                android:textColor="#828282"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_total_xuedian_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_total_xuedian"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="#ff7200"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/tv_total_xuedian_val"
                android:gravity="center_vertical"
                android:text="点"
                android:textColor="#828282"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_shuaxinjinbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shuaxin"
                android:focusable="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tixian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_xuedian"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_ketixian_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/money_icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_ketixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_ketixian_icon"
                android:text="最大可提现 :"
                android:textColor="#828282"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ketixian_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_ketixian"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="#ff7200"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_ketixian_val"
                android:text="元"
                android:layout_centerVertical="true"
                android:textColor="#828282"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_gotixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="去提现"
            android:textColor="#828282"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_gonggao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/tongzhi_img"
            android:scaleType="centerCrop" />

        <com.ucuxin.ucuxin.tec.view.MarqueeTextView
            android:id="@+id/tv_gonggao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text=""
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>