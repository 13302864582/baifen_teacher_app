<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:demo="http://schemas.android.com/apk/res/com.ucuxin.ucuxin.tec"
    android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#00000000"
    android:minHeight="555dp"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2666dp"
        android:layout_marginTop="@dimen/welearn_title_bar_and_status_hight"
        android:layout_weight="111" >

        <TextView
            android:id="@+id/blank_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:visibility="gone" />

        <com.ucuxin.ucuxin.tec.view.SlidingDrawer
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="48dp"
            android:orientation="vertical"
            demo:animateOnClick="true"
            demo:content="@+id/content1"
            demo:handle="@+id/handle1"
            demo:orientation_="topDown"
            demo:tensionTween="@color/transparent" > 

            <LinearLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="@color/transparent"
                android:orientation="vertical" >

                <com.ucuxin.ucuxin.tec.view.viewpager.MyViewPager
                    android:id="@+id/mViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/handle1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/turn_down" />
        </com.ucuxin.ucuxin.tec.view.SlidingDrawer>

        <RelativeLayout
            android:id="@+id/rl_recording"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#ECECEC"
            android:visibility="gone" >

            <TextView
                android:id="@+id/recording_tv_input_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/recording_text"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_recording"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/stop_pre" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tishi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="#434343" >

            <TextView
                android:id="@+id/tv_tishi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="使用标准普通话/声音洪亮/不应付答题\n如果因此被投诉将扣除0.2个学点"
                android:textColor="#F86F1D" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white" >

        <LinearLayout
            android:id="@+id/voice_input_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/choice_text_btn_input_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="19dp"
                android:paddingRight="9dp"
                android:src="@drawable/choic_text_input_selector" />

            <Button
                android:id="@+id/record_btn_input_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/click_start_record_btn_selector"
                android:text="@string/click_to_record_text" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/text_input_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="55dp"
            android:padding="5dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/choice_voice_btn_input_view"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:contentDescription="@null"
                android:src="@drawable/bg_chat_voice_selector" />

            <Button
                android:id="@+id/input_sure_btn_input_view"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/bg_normal_btn_selector"
                android:gravity="center"
                android:tag="0"
                android:text="@string/text_nav_cancel"
                android:textColor="@color/bg_normal_btn_text_color_selector" />

            <EditText
                android:id="@+id/text_input_et_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toLeftOf="@id/input_sure_btn_input_view"
                android:layout_toRightOf="@id/choice_voice_btn_input_view"
                android:background="@drawable/bg_edittext"
                android:gravity="bottom"
                android:inputType="text"
                android:maxHeight="95dip"
                android:minHeight="40dp"
                android:padding="6dp"
                android:singleLine="false" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>